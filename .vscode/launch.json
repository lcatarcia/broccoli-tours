{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: API (launch)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend: build",
      "program": "${workspaceFolder}/backend/src/BroccoliTours.Api/bin/Debug/net8.0/BroccoliTours.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/src/BroccoliTours.Api",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "internalConsole",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Frontend: Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "frontend: dev"
    },
    {
      "name": "Frontend: Chrome (full stack)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "dev: full stack"
    }
  ]
}
